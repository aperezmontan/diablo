<%= form_with(model: pool, local: true) do |form| %>
  <% if pool.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pool.errors.count, "error") %> prohibited this pool from being saved:</h2>

      <ul>
      <% pool.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="six columns">
      <%= form.label :week %>
      <%= form.select :week, options_for_select(1..17), {}, {required: 'true', autofocus: 'false', class: "u-full-width"} %>
    </div>
    <div class="six columns">
      <%= form.label :year %>
      <%= form.select :year, options_for_select(2018..2019), {}, {required: 'true', autofocus: 'false', class: "u-full-width"} %>
    </div>
  </div>

  <%= form.label :description %>
  <%= form.text_area :description, class: "u-full-width" %>

  <%= form.submit 'CREATE POOL', class: "button-primary" %>
<% end %>
